---
// Component Imports
import HeadBase from '../components/HeadBase.astro';
import Header from '../components/Header.astro';
import Wrapper from "../components/Wrapper.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description: string;
  permalink: string;
}
const { title, description, permalink } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <HeadBase title={title} description={description} permalink={permalink}/>
</head>
<body>
    <Header />
    <main class="bg-gray-100 py-2">
    <Wrapper>
        <slot />
    </Wrapper>
    </main>
    <Footer />
</body>
</html>

<style>
</style>
